{
    "name": "next-exam-student",
    "version": "1.0.0",
    "main": "dist/main/main.mjs",
    "author": {
        "name": "Thomas Michael Weissel",
        "email": "valueerror@gmail.com",
        "url": "https://next-exam.at"
    },
    "homepage": "https://next-exam.at",
    "license": "GPL-3.0",
    "description": "An exam managment tool for digital exams",
    "type": "module",
    "scripts": {
        "dev": "node scripts/watch.mjs",
        "build": "node scripts/build.mjs && electron-builder -l",
        "build:mac": "node scripts/build.mjs && electron-builder -m",
        "build:win": "node scripts/build.mjs && electron-builder -w"
    },
    "build": {
        "productName": "Next-Exam-Student",
        "appId": "com.nextexam-student.app",
        "asar": {
            "smartUnpack": true
        },
        "afterSign": "scripts/notarize.cjs",
        "asarUnpack": [
            "node_modules/screenshot-desktop-wayland/lib/win32",
            "public",
            "node_modules/sharp/**/*",
            "node_modules/active-win/**/*",
            "node_modules/@img/**/*"
        ],
        "directories": {
            "output": "../release/${version}"
        },
        "compression": "normal",
        "files": [
            "dist",
            "public"
        ],
        "linux": {
            "target": "AppImage",
            "category": "Utility",
            "icon": "public/icons/256x256.png",
            "artifactName": "${productName}_${version}.${ext}"
        },
        "mac": {
            "icon": "public/icons/icon.png",
            "artifactName": "${productName}_${version}_${arch}.${ext}",
            "hardenedRuntime": true,
            "gatekeeperAssess": false,
            "entitlements": "entitlements.mac.plist",
            "entitlementsInherit": "entitlements.mac.plist",
            "category": "public.app-category.utilities",
            "target": {
                "target": "dmg",
                "arch": [
                    "universal"
                ]
            }
        },
        "dmg": {
            "sign": "false"
        },
        "portable": {
            "useZip": true,
            "unpackDirName": true,
            "splashImage": "public/splash.bmp"
        },
        "msi": {
            "perMachine": true,
            "upgradeCode": "95a8e931-7946-44c5-9a9c-ec31d1553b03"
        },
        "win": {
            "icon": "public/icons/icon24x24.png",
            "target": [
                {
                    "target": "portable",
                    "arch": [
                        "x64"
                    ]
                },
                {
                    "target": "msi",
                    "arch": [
                        "x64"
                    ]
                }
            ],
            "artifactName": "${productName}_${version}.${ext}",
            "certificateSubjectName": "OSOS Austria",
            "signingHashAlgorithms": [
                "sha256"
            ]
        }
    },
    "engines": {
        "node": ">=22.0.0"
    },
    "devDependencies": {
        "@intlify/unplugin-vue-i18n": "^5.0.0",
        "@vitejs/plugin-vue": "^5.1.4",
        "electron": "^32.1.2",
        "electron-builder": "^25.0.5",
        "nodemon": "^3.1.6",
        "typescript": "^5.6.2",
        "vite": "^5.4.6",
        "vite-plugin-commonjs": "^0.10.3",
        "vite-plugin-resolve": "^2.5.2",
        "vue": "^3.5.6"
    },
    "env": {
        "//": "Used in build scripts",
        "PORT": 3001
    },
    "keywords": [
        "vite",
        "electron",
        "vue3",
        "rollup"
    ],
    "dependencies": {
        "@tiptap/extension-blockquote": "^2.7.2",
        "@tiptap/extension-bold": "^2.7.2",
        "@tiptap/extension-bullet-list": "^2.7.2",
        "@tiptap/extension-character-count": "^2.7.2",
        "@tiptap/extension-code": "^2.7.2",
        "@tiptap/extension-code-block-lowlight": "^2.7.2",
        "@tiptap/extension-color": "^2.7.2",
        "@tiptap/extension-document": "^2.7.2",
        "@tiptap/extension-dropcursor": "^2.7.2",
        "@tiptap/extension-gapcursor": "^2.7.2",
        "@tiptap/extension-hard-break": "^2.7.2",
        "@tiptap/extension-heading": "^2.7.2",
        "@tiptap/extension-history": "^2.7.2",
        "@tiptap/extension-horizontal-rule": "^2.7.2",
        "@tiptap/extension-image": "^2.7.2",
        "@tiptap/extension-italic": "^2.7.2",
        "@tiptap/extension-list-item": "^2.7.2",
        "@tiptap/extension-ordered-list": "^2.7.2",
        "@tiptap/extension-paragraph": "^2.7.2",
        "@tiptap/extension-strike": "^2.7.2",
        "@tiptap/extension-subscript": "^2.7.2",
        "@tiptap/extension-superscript": "^2.7.2",
        "@tiptap/extension-table": "^2.7.2",
        "@tiptap/extension-table-cell": "^2.7.2",
        "@tiptap/extension-table-header": "^2.7.2",
        "@tiptap/extension-table-row": "^2.7.2",
        "@tiptap/extension-text": "^2.7.2",
        "@tiptap/extension-text-align": "^2.7.2",
        "@tiptap/extension-text-style": "^2.7.2",
        "@tiptap/extension-typography": "^2.7.2",
        "@tiptap/extension-underline": "^2.7.2",
        "@tiptap/vue-3": "^2.7.2",
        "archiver": "^5.3.2",
        "bootstrap": "^5.3.3",
        "cors": "^2.8.5",
        "default-gateway": "^7.2.2",
        "dexie": "^4.0.8",
        "dompurify": "^3.1.6",
        "electron-audio": "^0.1.0",
        "electron-log": "^5.2.0",
        "esbuild": "^0.23.1",
        "express": "^4.21.0",
        "express-fileupload": "^1.5.1",
        "extract-zip": "^2.0.1",
        "fs": "^0.0.1-security",
        "get-windows": "^9.2.0",
        "html2pdf-jspdf2": "^0.1.2",
        "ip": "^2.0.1",
        "lowlight": "^3.1.0",
        "mammoth": "^1.8.0",
        "moment-timezone": "^0.5.45",
        "node-fetch": "^3.3.2",
        "node-forge": "^1.3.1",
        "node-notifier": "^10.0.1",
        "play-sound": "^1.1.6",
        "ps-node": "^0.1.6",
        "sass": "1.50.0",
        "screenshot-desktop-wayland": "^1.15.2",
        "sharp": "^0.33.5",
        "simple-get": "^4.0.1",
        "tesseract.js": "^5.1.1",
        "validator": "^13.12.0",
        "vue": "^3.5.6",
        "vue-i18n": "^10.0.1",
        "vue-router": "^4.4.5",
        "vue-sweetalert2": "^5.0.11"
    },
    "overrides": {
        "signal-exit": "3.0.7"
    }
}
